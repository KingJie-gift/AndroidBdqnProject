<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fankui">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/messageT"
              android:textSize="16dp"
              android:layout_marginTop="12dp"
              android:text="请输入要反馈的标题"
    ></TextView>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:hint="请输入标题"
              android:layout_toRightOf="@id/messageT"
              android:id="@+id/titlef"
    ></EditText>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_below="@id/titlef"
              android:gravity="top"
              android:inputType="textMultiLine"
              android:minHeight="20dp"
              android:minLines="8"
              android:hint="请输入要反馈的信息"
              android:maxLines="10"
              android:scrollbars="vertical"
              android:id="@+id/contentf"></EditText>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/qquserT"
              android:textSize="16dp"
              android:layout_marginTop="12dp"
              android:layout_below="@id/contentf"
        android:text="请输入联系方式"
    ></TextView>
    <EditText
            android:layout_below="@id/contentf"
            android:id="@+id/userQQ"
            android:hint="请输入联系方式"
            android:layout_toRightOf="@id/qquserT"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </EditText>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/fankuiButton"
            android:layout_below="@id/userQQ"
            android:layout_marginTop="3dp"
            android:text="反馈"
            android:layout_centerHorizontal="true"
    />
</RelativeLayout>
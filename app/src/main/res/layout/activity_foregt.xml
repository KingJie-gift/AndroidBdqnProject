<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".foregt">


    <TableLayout android:layout_width="match_parent"
                 android:layout_marginTop="100dp"
                 android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent">
            <TextView
                android:text="请输入手机号"
            ></TextView>
            <EditText android:layout_weight="1"
            android:hint="请输入手机号"
                      android:inputType="phone"
            android:id="@+id/phone"></EditText>
        </TableRow>
        <TableRow android:layout_width="match_parent">
            <TextView
                    android:text="请输入名称"
            ></TextView>
            <EditText android:layout_weight="1"
                      android:hint="请输入名称"
                      android:inputType="textEmailAddress"
                      android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/user"></EditText>
        </TableRow>
    <TableRow android:layout_width="match_parent">
        <TextView android:layout_weight="0.4"></TextView>
        <Button android:layout_weight="1" android:text="找回"
        android:id="@+id/forgetButton"></Button>
        <TextView android:layout_weight="1"></TextView>
    </TableRow>
    </TableLayout>
</RelativeLayout>